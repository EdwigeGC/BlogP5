{% extends 'templateBackend.twig' %}

{% block content %}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <a href="/addPostForm" class="btn btn-green">Ajouter un article</a>
        </div>
        <h3>liste des articles<h3>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive-md">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id de l'article</th>
                            <th scope="col">Derni√®re modification</th>
                            <th scope="col">Titre</th>
                            <th scope="col">Author</th>
                            <th scope="col">Publication</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>

                    <tbody>
                     {% for value in posts %}
                        <tr>
                            <td>{{ value.id }}</td>
                            <td>{{ value.displayDate }}</td>
                            <td>{{ value.title }}</td>
                            <td>{{ value.author }}</td>
                            <td>{{ value.published }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-green" href="/updatePostForm?id={{ value.id }}">Modifier</a>
                                </div>
                                <div class="btn-group">
                                    <a class="btn btn-pink" href="/deletePost?id={{ value.id }}" onclick="return confirm('Voulez-vous vraiment supprimer cet article?')">Supprimer</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  
                </table>
            </div>
        </div>
    </div>

</div>
{% endblock %}